<% if task.completed? %>
<tr  id="<%= task.id %>" class="warning">
  <td><%= link_to icon('times'),  task_path(task, completed: false), remote: true , class: ' btn btn-danger btn-xs',  method: :put, data: { disable_with: "#{icon('refresh spin')}" } %></td>
<% else %>
<tr id="<%= task.id %>">
  <td><%= link_to icon('check'), task_path(task, completed: true), remote: true , class: ' btn btn-success btn-xs',  method: :put, data: { disable_with: "#{icon('refresh spin')}" } %></td>
<% end %>
  <td><%= task.title %></td>
  <td><%= task.description %></td>
  <% if task.completed_at %>
    <td><%= task.completed_at.strftime('%B %d, %Y at %l:%M%P') %></td>
  <% else %>
    <td><i>Incomplete</i></td>
  <% end %>
  <td><%= link_to icon('trash'), task, remote: true , class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure?', disable_with: "#{icon('refresh spin')}" } %></td>
</tr>
